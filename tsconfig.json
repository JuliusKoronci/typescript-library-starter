{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "removeComments": true,
    "jsx": "react",
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
