{
  "name": "typescript-library-starter",
  "version": "0.0.1",
  "description": "TypeScript Library starter for simple development",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": "Julius Koronci <jk@web-solutions.sk>",
  "license": "MIT",
  "scripts": {
    "bundle": "webpack",
    "commit": "npx git-cz",
    "test": "jest --coverage",
    "tdd": "jest --watch",
    "start": "webpack-dev-server --mode development --hot",
    "build": "npm run test && npm run lint:fix && npm run declarations && npm run lint:style && webpack --mode production && npm run docs",
    "check-types": "tsc --no-emit",
    "declarations": "tsc -d",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:style": "sass-lint -c .sass-lint.yml './src/**/*.scss' -v -q",
    "docs": "typedoc --out docs ./src",
    "coveralls": "cat ./src/coverage/lcov.info | node node_modules/.bin/coveralls",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.7.0",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-react-jsx-source": "7.5.0",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/polyfill": "7.7.0",
    "@babel/preset-env": "^7.7.0",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.0",
    "@babel/runtime": "7.7.0",
    "@storybook/addon-actions": "^5.3.10",
    "@storybook/addon-info": "^5.3.10",
    "@storybook/addon-links": "^5.3.10",
    "@storybook/addons": "^5.2.4",
    "@storybook/react": "^5.2.4",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "commitizen": "^4.0.3",
    "css-loader": "^3.2.0",
    "coveralls": "^3.0.7",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.12.0",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "react-docgen-typescript-loader": "^3.3.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.1.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2",
    "y": "^0.3.2"
  },
  "dependencies": {
  },
  "peerDependencies": {
    "react": "^16.10.2"
  }
}
